generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/mental_health_app/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// NextAuth.js tables
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Aplicação - Usuários
model User {
  id               String   @id @default(cuid())
  email            String   @unique
  password         String?  // Pode ser null para OAuth users
  name             String
  emailVerified    DateTime? @map("email_verified")
  image            String?
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  
  // Configurações do usuário (JSON)
  settings         Json      @default("{}")

  // Relacionamentos NextAuth
  accounts         Account[]
  sessions         Session[]
  
  // Relacionamentos da aplicação
  moodRecords      MoodRecord[]
  categories       Category[]
  sharedAccess     SharedAccess[]
  reminders        Reminder[]
  receivedShares   SharedAccess[] @relation("SharedWith")

  @@map("users")
}

// Registros de humor diário
model MoodRecord {
  id               String    @id @default(cuid())
  userId           String    @map("user_id")
  date             DateTime  @default(now())
  
  // Escalas de medição de humor
  numericScale     Int?      @map("numeric_scale") // 1-10
  emojis           String[]  @default([])          // Array de emojis selecionados
  descriptiveWords String[]  @default([]) @map("descriptive_words") // Array de palavras descritivas
  
  // Texto livre e anexos
  notes            String?
  photos           String[] @default([])           // URLs das fotos no S3
  
  // Controle de privacidade
  isPrivate        Boolean   @default(false) @map("is_private")
  
  // Timestamps
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  
  // Relacionamentos
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  activities       Activity[]

  @@map("mood_records")
  @@index([userId, date])
}

// Categorias de atividades
model Category {
  id          String    @id @default(cuid())
  userId      String?   @map("user_id")  // Null para categorias pré-definidas
  name        String
  type        String                     // "predefined" ou "custom"
  icon        String?                    // Nome do ícone ou emoji
  isCustom    Boolean   @default(false) @map("is_custom")
  createdAt   DateTime  @default(now()) @map("created_at")
  
  // Relacionamentos
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  activities  Activity[]

  @@map("categories")
  @@unique([userId, name])
}

// Atividades realizadas por dia
model Activity {
  id           String      @id @default(cuid())
  moodRecordId String      @map("mood_record_id")
  categoryId   String      @map("category_id")
  notes        String?
  completed    Boolean     @default(true)
  createdAt    DateTime    @default(now()) @map("created_at")
  
  // Relacionamentos
  moodRecord   MoodRecord  @relation(fields: [moodRecordId], references: [id], onDelete: Cascade)
  category     Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("activities")
}

// Sistema de compartilhamento
model SharedAccess {
  id              String      @id @default(cuid())
  ownerId         String      @map("owner_id")
  sharedWithEmail String      @map("shared_with_email")
  sharedWithId    String?     @map("shared_with_id")
  status          ShareStatus @default(PENDING)
  invitedAt       DateTime    @default(now()) @map("invited_at")
  acceptedAt      DateTime?   @map("accepted_at")
  revokedAt       DateTime?   @map("revoked_at")
  
  // Relacionamentos
  owner           User        @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWith      User?       @relation("SharedWith", fields: [sharedWithId], references: [id])

  @@map("shared_access")
  @@unique([ownerId, sharedWithEmail])
}

enum ShareStatus {
  PENDING
  ACCEPTED
  DECLINED
  REVOKED
}

// Lembretes configurados pelo usuário
model Reminder {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  time      String   // Formato "HH:mm"
  isActive  Boolean  @default(true) @map("is_active")
  timezone  String   @default("America/Sao_Paulo")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // Relacionamentos
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reminders")
}
